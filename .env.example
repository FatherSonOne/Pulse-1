# Pulse App Environment Variables
# Copy this file to .env.local and fill in your values

# ============================================
# CORE CONFIGURATION
# ============================================

# App Mode: 'production' | 'development' | 'demo'
# - production: No mock fallbacks, real data only
# - development: Mock fallbacks enabled for missing data
# - demo: Full mock data mode for demos
VITE_APP_MODE=development

# Google Gemini AI API Key (Required)
VITE_GEMINI_API_KEY=your-gemini-api-key

# ============================================
# SUPABASE (Required)
# ============================================
# Get these from: https://app.supabase.com/project/_/settings/api
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-supabase-anon-key

# ============================================
# INTEGRATIONS (Optional)
# ============================================

# Slack Bot Token (for Slack integration)
# Get from: https://api.slack.com/apps
VITE_SLACK_BOT_TOKEN=xoxb-your-slack-token

# Perplexity API (for Web Search feature via Sonar)
# Get from: https://www.perplexity.ai/settings/api
# Note: For production, set PERPLEXITY_API_KEY in Supabase Edge Function secrets
# Command: npx supabase secrets set PERPLEXITY_API_KEY=your-key
VITE_PERPLEXITY_API_KEY=your-perplexity-key

# ============================================
# CRM INTEGRATIONS (Optional)
# ============================================
# OAuth credentials for CRM integrations
# Required for: HubSpot, Salesforce, Pipedrive, Zoho sync features
# See: docs/OAUTH-SETUP-GUIDE.md for detailed setup instructions

# HubSpot OAuth
# Get from: https://app.hubspot.com/developer/{account-id}/applications
# Redirect URI: http://localhost:5173/integrations/hubspot/callback
# Required scopes: crm.objects.contacts.*, crm.objects.companies.*, crm.objects.deals.*, crm.objects.tasks.*
VITE_HUBSPOT_CLIENT_ID=your-hubspot-client-id
VITE_HUBSPOT_CLIENT_SECRET=your-hubspot-client-secret
VITE_HUBSPOT_REDIRECT_URI=http://localhost:5173/integrations/hubspot/callback

# Salesforce OAuth
# Get from: https://login.salesforce.com/ → Setup → App Manager → New Connected App
# Callback URL: http://localhost:5173/integrations/salesforce/callback
# Required scopes: api, refresh_token, web, full
VITE_SALESFORCE_CLIENT_ID=your-salesforce-client-id
VITE_SALESFORCE_CLIENT_SECRET=your-salesforce-client-secret
VITE_SALESFORCE_REDIRECT_URI=http://localhost:5173/integrations/salesforce/callback

# Pipedrive OAuth
# Get from: https://app.pipedrive.com/developer/apps
# Callback URL: http://localhost:5173/integrations/pipedrive/callback
# Required scopes: deals:full, contacts:full, activities:full, organizations:full, users:read
VITE_PIPEDRIVE_CLIENT_ID=your-pipedrive-client-id
VITE_PIPEDRIVE_CLIENT_SECRET=your-pipedrive-client-secret
VITE_PIPEDRIVE_REDIRECT_URI=http://localhost:5173/integrations/pipedrive/callback

# Zoho CRM OAuth
# Get from: https://api-console.zoho.com/ (Server-based Applications)
# Redirect URI: http://localhost:5173/integrations/zoho/callback
# Required scopes: ZohoCRM.modules.ALL, ZohoCRM.settings.ALL, ZohoCRM.users.READ
# Data Center: Select based on your account location (US, EU, IN, AU, CN)
VITE_ZOHO_CLIENT_ID=your-zoho-client-id
VITE_ZOHO_CLIENT_SECRET=your-zoho-client-secret
VITE_ZOHO_REDIRECT_URI=http://localhost:5173/integrations/zoho/callback
VITE_ZOHO_ACCOUNTS_URL=https://accounts.zoho.com

# ============================================
# SMS CONFIGURATION (Optional - WiFi messaging preferred)
# ============================================
# Set to 'true' for demo/mock mode (no Twilio credentials needed)
# Set to 'false' to use real Twilio integration
VITE_SMS_MOCK_MODE=true

# Twilio Configuration (only needed if VITE_SMS_MOCK_MODE=false)
# VITE_TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
# VITE_TWILIO_AUTH_TOKEN=your-auth-token
# VITE_TWILIO_PHONE_NUMBER=+1xxxxxxxxxx
