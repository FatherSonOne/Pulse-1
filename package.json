    "dev": "vite",
    "server": "node server.js",
    "build": "vite build",
    "build:analyze": "vite build --mode production && npx vite-bundle-visualizer",
    "build:stats": "vite build --mode production && node -e \"const fs=require('fs');const stats=fs.readdirSync('dist/assets').map(f=>({file:f,size:fs.statSync('dist/assets/'+f).size}));console.table(stats.sort((a,b)=>b.size-a.size));\"",
